<div class="row taxi">
  <!-- Taxi Image -->
  <div class="large-4 columns" style="padding-top: 1%;text-align: center;">
    <%= image_tag 'taxis/' + taxi.image + '.png', class: 'th radius taxi-image' %>
    <div class="span-align">
      <span style="color: midnightblue;"><%= taxi.name %></span>
    </div>
  </div>

  <!-- Taxi Info -->
  <div class="large-5 columns taxi-info-div">
    <div class="row">

      <!-- Taxi Capacity -->
      <div class="large-4 columns">
        <%= image_tag 'passengers.png' %>
        <div class="taxi-info">
          <span class="taxi-text-color">
            <%= taxi.passengers_number %>
          </span>
        </div>
      </div>

      <!-- Taxi Luggage -->
      <div class="large-4 columns">
        <%= image_tag 'lagguage.png' %>
        <div class="taxi-info">
          <span class="taxi-text-color">
            <%= taxi.luggage %>
          </span>
        </div>
      </div>

      <!-- Taxi Price -->
      <div class="large-4 columns" style="padding-top: 4%;">
        <span class="taxi-text-color">
            <%= number_to_currency taxi.price_km, unit: 'â‚¬', separator: ',', format: '%n %u' %>
        </span>
      </div>
    </div>
  </div>

  <!-- Taxi Button -->
  <div class="large-3 columns" style="padding-top: 5%;">
    <%= form_tag '#' do %>
        <%= button_tag type: 'submit', class: 'button small radius' do %>
            <i class="fi-check"></i> Select Taxi
        <% end %>
    <% end %>
  </div>

</div>