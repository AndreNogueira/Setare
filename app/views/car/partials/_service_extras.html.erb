<div style="  background: linear-gradient(to bottom, #D5D5D5 0%,#D5D5D5 100%);
        border-radius: 7px;">

  <div class="row" >
    <div class="large-3 columns">
      <div class="row">
        <div class="large-12 columns">
          <div class="car_image" style="text-align: center">
            <%= image_tag "cars/"+get_car(session[:service_params]["car_id"].to_i).image+".jpg",size: "150x100" %>
          </div>
        </div>
      </div>

      <div class="row" style="margin-top: 40px;">
        <div class="large-12 columns">
          <p class="provided_by">Provided by:</p>
          <div style="text-align: center">
            <%= image_tag 'agencies/'+get_car(session[:service_params]["car_id"].to_i).agency.image+'.png',size: "70x35" %>
          </div>
        </div>
      </div>
    </div>
    <div class="large-9 columns">

      <div class="row">
        <div class="large-8 columns" id="car_info">
          <div class="row car_info_margin">
            <div class="large-12 columns">
              <p style="font-size: 16px !important;"><%=get_car(session[:service_params]["car_id"].to_i).brand+' '+get_car(session[:service_params]["car_id"].to_i).model%></p>
              <p style="font-size: 14px !important;"> Ano:<%=' '+get_car(session[:service_params]["car_id"].to_i).year.to_s%></p>
            </div>
          </div>
          <div class="row car_info_margin">
            <div class="large-5 columns" id="border_left">
              <p>Classe: <%= get_car(session[:service_params]["car_id"].to_i).category.name%></p>

            </div>
            <div class="large-7 columns">
              <%= image_tag 'cars/Search Results/icon_fuelpolicy.gif', size:'15x15' %><p><%= ' '+get_car(session[:service_params]["car_id"].to_i).fuel_type+'  '+get_car(session[:service_params]["car_id"].to_i).fuel_consumption.to_s+'L / 100Km' %></p>
            </div>
          </div>
          <div class="row car_info_margin">
            <div class="large-2 columns">
              <%= image_tag 'cars/Search Results/nr_seats.png', size:'13x13' %><p>x<%= get_car(session[:service_params]["car_id"].to_i).capacity %></p>
            </div>
            <div class="large-2 columns" style="text-align: center">
              <%= image_tag 'cars/Search Results/doors-icon.jpg', size: '20x20'%><p><%= 'x'+get_car(session[:service_params]["car_id"].to_i).doors_number.to_s %></p>
            </div>
            <div class="large-2 columns">
              <%if get_car(session[:service_params]["car_id"].to_i).ac  %>
                  <%= image_tag 'cars/Search Results/icon-ac.png',size: '18x18'%><p> yes</p>
              <%else%>
                  <%= image_tag 'cars/Search Results/icon-ac.png',size: '18x18'%><p> no</p>
              <%end%>
            </div>
            <div class="large-3 columns" style="text-align: center">
              <% if get_car(session[:service_params]["car_id"].to_i).transmission %>
                  <%=image_tag 'cars/Search Results/icon-gear.png', size:'22x22'%><p>manual</p>
              <%else%>
                  <%=image_tag 'cars/Search Results/icon-gear.png', size:'22x22'%><p>automatic</p>
              <%end%>
            </div>

            <div class="large-2 columns end" style="text-align: center">
              <%if get_car(session[:service_params]["car_id"].to_i).abs  %>
                  <%= image_tag 'cars/Search Results/icon_abs.png',size: '20x20'%><br><p>yes</p>
              <%else%>
                  <%= image_tag 'cars/Search Results/icon-ac.png',size: '20x20'%><br><p>no</p>
              <%end%>
            </div>

          </div>
          <div class="row car_info_margin">
            <div class="large-12 columns" style="text-align: center !important;">

              <p style="color: #749E3A">We offer for FREE:</p>
            </div>
          </div>
          <div class="row car_info_margin">
            <div class="large-7 columns">
              <%= image_tag 'cars/Search Results/check-icon.png',size: '13x13' %><p> Safe against Robbery</p>
            </div>
            <div class="large-5 columns">
              <%= image_tag 'cars/Search Results/check-icon.png',size: '13x13' %><p> Revocation</p>
            </div>
          </div>
          <div class="row car_info_margin">
            <div class="large-12 columns">
              <%= image_tag 'cars/Search Results/check-icon.png',size: '13x13' %><p> Own damage coverage</p>
            </div>
          </div>
        </div>

        <div class="large-4 columns" >
          <div class="row">
            <div class="large-12 columns" style="text-align: center !important;margin-top: 60px;">
              <h5>Only <%= get_car(session[:service_params]["car_id"].to_i).price%> &euro; per day</h5>
            </div>
            <div class="large-12 columns" style="text-align: center !important;">
              <h8>Price of your rental car <%= calc_rent_price get_car(session[:service_params]["car_id"].to_i).price, session[:service_params]["begin_date"],session[:service_params]["end_date"]  %> &euro; </h8>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>

<div style="background-color:#666666 ;border-top-left-radius: 7px; border-top-right-radius: 7px;margin-top: 20px">
  <div class="row">
    <div class="large-12 columns" style="text-align: center">
      <h5>Please select the Extra Equipment</h5>
    </div>
  </div>
</div>
<div style="background-color:#D5D5D5 ">
  <div class="row" >
    <div class="large-8 columns" style="text-align: center">
      <p>Item description</p>
    </div>
    <div class="large-2 columns" style="text-align: center">
      <p>Quantity</p>
    </div>
    <div class="large-2 columns" style="text-align: center">
      <p>Add</p>
    </div>
  </div>
</div>

<%= form_tag car_service_payment_path do %>
    <div style="background-color:#D5D5D5 ">
      <div class="row" style="border-top: 1px solid #FFFFFF;">
        <div class="large-2 columns">
          <%= image_tag 'cars/Main Images/extra-driver.jpg',size: '80x80' ,style: 'margin-left:15px; margin-top:5px; margin-bottom:5px'%>
        </div>
        <div class="large-6 columns">
          <p style="font-size: 12px">Each <b>additional driver</b> costs 6.15&euro; per day.
            Share driving and enjoy the tranquility knowing that someone else is covered by insurance if necessary.</p>
        </div>
        <div class="large-2 columns" style="text-align: center">
          <div style="margin-top: 20px">
            <%= select_tag "additional_driver_quantity", options_for_select((0..4)),style:'width: 40px;'  %>
          </div>
        </div>
        <div class="large-2 columns" style="text-align: center">
          <div style="margin-top: 25px">
            <%= check_box_tag "additional_driver" %>
          </div>
        </div>
      </div>

      <div class="row" style="border-top: 1px solid #FFFFFF;">
        <div class="large-2 columns">
          <%= image_tag 'cars/Main Images/extra-gps.jpg',size: '80x80' ,style: 'margin-left:15px; margin-top:5px; margin-bottom:5px'%>
        </div>
        <div class="large-6 columns">
          <p style="font-size: 12px"><b>GPS</b> costs 8.61&euro; per day.
            GPS provides turn directions after every curve.</p>
        </div>
        <div class="large-2 columns" style="text-align: center">
          <div style="margin-top: 20px">
            <%= select_tag "gps_quantity", options_for_select((0..4)),style:'width: 40px;'  %>
          </div>
        </div>
        <div class="large-2 columns" style="text-align: center">
          <div style="margin-top: 25px">
            <%= check_box_tag "gps"%>
          </div>
        </div>
      </div>


      <div class="row" style="border-top: 1px solid #FFFFFF;" >
        <div class="large-2 columns">
          <%= image_tag 'cars/Main Images/extra-booster.jpg',size: '80x80' ,style: 'margin-left:15px; margin-top:5px; margin-bottom:5px'%>
        </div>
        <div class="large-6 columns">
          <p style="font-size: 12px"><b>Child Seat</b> costs 10.46&euro; per day.
            Recommended for children weighing 20 to 40lbs / 9 to 18kg (Age approx. 1-3 years)</p>
        </div>
        <div class="large-2 columns" style="text-align: center">
          <div style="margin-top: 20px">
            <%= select_tag "baby_seat_quantity", options_for_select((0..4)),style:'width: 40px;'  %>
          </div>
        </div>
        <div class="large-2 columns" style="text-align: center">
          <div style="margin-top: 25px">
            <%= check_box_tag "baby_seat" %>
          </div>
        </div>
      </div>
    </div>

    <div class="row" style="margin-top: 10px">
      <div class="large-4 large-offset-8 columns" style="text-align: right">
        <%= button_tag type: 'submit', class: 'button large radius expand' do %>
            <%= image_tag 'cars/Main Images/key-icon.png', size: '35x35' %> Book Now !
        <% end %>
      </div>
    </div>
<%end%>